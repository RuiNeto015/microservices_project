									"pm.environment.set(\"designation\", designation);",
									"pm.environment.set(\"description\", description);",
									"",
									"function randomString(length, chars) {",
									"    var result = '';",
									"    for (var i = length; i > 0; --i) result += chars[Math.floor(Math.random() * chars.length)];",
									"    return result;",
									"}",
